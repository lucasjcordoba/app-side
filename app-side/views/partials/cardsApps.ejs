<div class="container d-flex">

<% for (let i = 1; i < 4; i++) {%>

  
  <div class="album py-5 bg-light">
    <div class="container">
      <div>
        <div>
          <div class="card p<%= [i] %>  mb-4 shadow-sm">
            <img class=" card-img-top" width="100%" height="225" src="<%= application[i].image_url %> " alt="">
            <div class="card-body">
              <p class="card-text"><%= application[i].name %></p>
              <p class="card-text"><%= application[i].price %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <button type="button" class="btn btn-sm btn-outline-secondary">View</button>
                  <button type="button" class="btn btn-sm btn-outline-secondary">Edit</button>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      
    </div>
  </div>

<% } %> 
</div>