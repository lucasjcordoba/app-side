


<div class="album py-5 bg-light">
    <div class="container">

        <div class="row">
            <% for (let i = 0; i < application.length; i++) {%>
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm">

                        <% if(application[i].image_url == application[0].image_url ) {%> 
                        <img class=" card-img-top" width="100%" height="100%" src="<%= application[i].image_url %> " alt="">
                        <% }  else {%> 
                            <img class=" card-img-top" width="100%" height="100%" src="/images/<%= application[i].image_url %> " alt="">
                        <% } %> 
                        <div class="card-body">      
                        <p class="card-text"><%= application[i].name %></p>
                        <p class="card-text"><%= application[i].price %></p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="/apps/detail/<%= application[i].id %>"><button type="button"
                                        class="btn btn-sm btn-outline-secondary">View</button></a>
                                <a href="/apps/edit/<%= application[i].id %> "><button type="button"
                                        class="btn btn-sm btn-outline-secondary">Edit</button></a>
        
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</div>