<!DOCTYPE html>
<html lang="en">
<!-- Head -->
<%- include('partials/head'); %>
<link rel="stylesheet" href="/stylesheets/index.css" class="css" />

</head>
<!-- Fin Head -->

<body>

  <!-- Nav Bar -->

  <%- include('partials/navbar') %>




  <div class="album py-5 bg-light">
    <div class="container">

      <div class="row">
        <% for (let i = 0; i < order.length; i++) {%>
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <img class=" card-img-top" width="100%" height="100%" src="<%= order[i].applications.image_url %> " alt="">
            <p><%= order[i].applications.name %> </p>
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href="/orders/detail/<%= order[i].id %> "><button type="button"
                      class="btn btn-sm btn-outline-secondary">Detail</button></a>

                </div>
              </div>
            </div>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </div>


  <!-- Nav Lateral -->

  <div class="d-flex container-fluid">

    <div class="nav-lat row">
      <nav class="nav flex-column">
        <a class="nav-link" href="/orders">Orders</a>
        <a class="nav-link" href="/apps">Apps</a>
        <a class="nav-link" href="/users">Users</a>
      </nav>

    </div>



    <!-- App -->



    <!-- Footer -->

    <%- include('partials/footer') %>






    <!--Scripts-->
    <%- include('partials/scripts') %>

</body>

</html>